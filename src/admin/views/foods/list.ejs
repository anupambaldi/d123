<% layout('../layouts/list') -%>
<div class="row ">
    <div class="col-md-12">
        <div class="card bg-transparent">
            <div class="contact-header d-flex align-items-sm-center media flex-column flex-sm-row bg-white mb-30">
                <div class="contact-header-left media-body d-flex align-items-center mr-4 col-6">
                    <!-- Add New Contact Btn -->
                    <div class="add-new-contact mr-20">
                        <div class="float-left">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="/restaurants">Restaurant Manager</a></li>
                                <li class="breadcrumb-item active">Food List</li>
                            </ol>
                        </div>
                    </div>
                    <!-- End Add New Contact Btn -->
                    
                    
                    <!-- End Search Form -->
                </div>
                <div class="contact-header-right d-flex align-items-center justify-content-end mt-3 mt-sm-0 col-6">
                    <div class="page-title-box">
                        <!-- <h4 class="page-title">Concierge List</h4> -->
                        <div class="float-right">
                            <a  class="btn btn-success waves-effect waves-light" href="/restaurants/add_food_page/<%=id%>"><span class="fa fa-plus"></span> Add Food </a>
                        </div>
                    </div>
                </div>
            </div>
         </div>
        
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="page-title mb-30"><%=Rname%> -- Food List</h4>
                <table class="table nowrap" >
                    <thead>
                    <tr>
                        <th>S.No.</th>
                        <th>Food Name</th>
                        <th>Calories</th>
                        <th>Category</th>
                        <th>Foodtype</th>
                        <th>Price</th>
                        <th>Food Image</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>

                        <%  data.forEach(function(user, index){ %>
                            <tr>
                                <td><%= index+1 %></td>
                                <td><%= user.food_name %></td>
                                <td><%= user.calories %></td>
                                <td><%= user.categoryId.name %></td>
                                <td><%= user.food_type %></td>
                                <td><%= user.price %></td>
                                <td><img src="<%=user.food_image%>" alt= "image" width="40px" height="40px"></td>
                                <td><a href="/restaurants/food_edit_page/<%=user._id%>" > <i class="fas fa-edit"></i></a>
                                    <a href="/restaurants/food_delete/<%=user._id%>" > <i class="fas fa-trash"></i></a></td>
                                   



                            </tr>

                            <%});%>

                                
                    </tbody>
                </table>
              </div>
        </div>
    </div>
</div>