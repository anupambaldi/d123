<% layout('../layouts/admin') -%>
<div class="row ">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-left">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/">Admin</a></li>
                    <li class="breadcrumb-item"><a href="/stores"> Store</a></li>
                    <li class="breadcrumb-item active"><a href="javascript: void(0);">View</a></li>
                </ol>
            </div>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">View Category Detail</h4>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-12">
        <div class="card-box">
            <div class="media mb-3">
                <img class="d-flex mr-3 rounded-circle avatar-lg" src="<%= s3Base+store.avatar %>"
                    alt="Generic placeholder image">

                <div class="media-body">
                    <h4 class="mt-0 mb-1"><%= store.nameEN %></h4>
                    <p class="text-muted"><%= store.titleEN %></p>
                    <!-- <p class="text-muted"><i class="mdi mdi-office-building"></i> Vine Corporation</p> -->

                    <a href="mailto:<%= store.email %>" class="btn- btn-xs btn-info">Send Email</a>
                    <!--<a href="javascript: void(0);" class="btn- btn-xs btn-secondary">Call</a>
                    <a href="javascript: void(0);" class="btn- btn-xs btn-secondary">Edit</a> -->
                </div>
            </div>

            <h5 class="mb-3 mt-4 text-uppercase bg-light p-2"><i class="mdi mdi-account-circle mr-1"></i> Information
            </h5>
            <div class="">
                <h4 class="font-13 text-muted text-uppercase">Email :</h4>
                <p class="mb-3">
                    <%= store.email %>
                </p>
                <h4 class="font-13 text-muted text-uppercase">Contact :</h4>
                <p class="mb-3">
                    <%= store.countryCode %>-<%= store.mobile %>
                </p>

                <h4 class="font-13 text-muted text-uppercase mb-1">Address :</h4>
                <p class="mb-3">
                    <%= store.address[0].flatNo %>,
                    <%= store.address[0].address %>,
                    <%= store.address[0].postcode %>

                </p>

                <% if(store.additionalFilters){ %>
                <h4 class="font-13 text-muted text-uppercase mb-1">Store Types :</h4>
                <p class="mb-3">
                    <%  store.additionalFilters.forEach( function(x){ %>
                        <%= x.nameEN  %>   <br> 
                    <% }) %>

                </p>
                <% } %>

                

                <h4 class="font-13 text-muted text-uppercase mb-1">Added :</h4>
                <p class="mb-3"> <%= moment(store.created).format("YYYY-MM-DD") %></p>

                
            </div>

        </div> <!-- end card-box-->
    </div>
</div>