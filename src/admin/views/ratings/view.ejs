<% layout('../layouts/admin') -%>
<div class="row ">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-left">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/restaurants">Restaurants Manager</a></li>
                    <li class="breadcrumb-item active"><a href="javascript: void(0);">View</a></li>
                </ol>
            </div>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">View Rating Detail</h4>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row">


                    <div class="col-lg-12">
                        <div class="form-group mb-3">
                            <label><b>Rating  Image:</b> </label> 
                            <% ratings.image.forEach((item)=>{  %>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <img src="<%= item %>" width="100" height="100"/>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <% }) %>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-group mb-3">
                            <label><b>Star Rating:</b> </label> <%= ratings.starrating %>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-group mb-3">
                            <label><b>Email:</b> </label> <%= ratings.userId.email %>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-group mb-3">
                            <label><b>Restaurant Name:</b> </label> <%= ratings.restaurantId.name %>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-group mb-3">
                            <label><b>Comment:</b> </label> <%=ratings.comment %>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-group mb-3">
                            <label><b>Status:</b> </label> <%=ratings.status %>
                        </div>
                    </div>
                    
                 
                
                     
                   
                   

                </div>
            </div>
        </div>
    </div>
</div>
