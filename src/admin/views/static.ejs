<% layout('layouts/admin') -%>
<div class="row ">
    <div class="col-md-12">
        <div class="card bg-transparent">
            <div class="contact-header d-flex align-items-sm-center media flex-column flex-sm-row bg-white mb-30">
                <div class="contact-header-left media-body d-flex align-items-center mr-4 col-6">
                    <!-- Add New Contact Btn -->
                    <div class="add-new-contact mr-20">
                        <div class="float-left">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                                <li class="breadcrumb-item active"><a href="javascript: void(0);">Static Pages</a></li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
         </div>
        
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card mb-30">
            <h4 class="page-title ml-20 mt-30"><%=name%></h4>
            <div class="card-body">
                <form action="/users/static?id=<%=id%>" method="post" >
                    <div class="row">
                        
                  
                        <div class="col-lg-6">
                            <div class="form-group mb-3">
                                <label>Description <span class="text-danger">*</span></label>
                               

                                <textarea type="text"  id="editor"  class="form-control"  name="content" placeholder="Message"  required><%=content%></textarea>

                                <div class="text-danger contactNumber"></div>
                            </div>
                        </div>
                        <div class="col-lg-12 text-right">
                            <div class="form-group mb-3 text-right">
                                <button  type="submit"
                                        class="btn btn-primary waves-effect waves-light">Submit</button>
                                
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

