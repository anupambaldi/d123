<% layout('../layouts/admin') -%>
<div class="row ">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-left">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/users"> Users</a></li>
                    <li class="breadcrumb-item active"><a href="javascript: void(0);">Detail</a></li>
                </ol>
            </div>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">View User Detail</h4>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <img style="float: left; width: 100px; height: 100px; border-radius: 50%; object-fit: cover; border: 1px solid #d3d3d3"
                             src="<%= user.isSocialPic ? user.avatar ? user.avatar: `${siteUrl}/images/user-pic.png`: user.avatar ? `${siteUrl}/${user.avatar}`: `${siteUrl}/images/user-pic.png` %>"
                             alt="<%= user.firstname %>">
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group mb-3">
                            <label><b>First Name:</b> </label> <%= user.firstname %>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group mb-3">
                            <label><b>Last Name:</b></label> <%= user.lastname %>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group mb-3">
                            <label><b>Email:</b> </label> <%= user.email %>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-group mb-3">
                            <label><b>Phone Number:</b> </label> <%= user.mobile %>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-group mb-3">
                            <label><b>Radius:</b> </label> <%= user.radius %>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-group mb-3">
                            <label><b>Pre Determine Number of Likes:</b> </label> <%= user.predetermine %>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-group mb-3">
                            <label><b>Status:</b> </label> <%- user.isSuspended ? '<span class="badge label-table badge-secondary">In-Active</span>': '<span class="badge label-table badge-success">Active</span>' %>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group mb-3">
                            <label><b>Created date:</b> </label> <%= showDate(user.created) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

    

    
    